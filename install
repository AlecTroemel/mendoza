#!/usr/bin/env janet

(import cook)

(cook/shell "cp ./mdz \"" cook/prefix "/bin/\"")
(cook/shell "mkdir -p \"" module/*syspath* "/mendoza\"")
(cook/shell "cp -r ./mendoza.janet \"" module/*syspath* "/mendoza\"")
(cook/shell "mkdir -p \"" module/*syspath* "/sublangs\"")
(cook/shell "cp -r syntax \"" module/*syspath* "/syntax\"")
